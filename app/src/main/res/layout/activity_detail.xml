<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f5ed"
        android:orientation="vertical"
        tools:context=".DetailActivity">

        <!-- Your existing content views -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/detailArrowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="#f4f5ed"
                android:src="@drawable/ic_fas_arrow_left" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/cute_meow"
                android:text="Title"
                android:textColor="@color/green_ui"
                android:textSize="44sp" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/detailImage"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_upload"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="@dimen/_15sdp"
                android:text="Type: "
                android:textColor="@color/green_ui"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/detailType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_15sdp"
                android:text="Cat"
                android:textColor="@color/green_ui"
                android:textSize="@dimen/_18ssp" />


        </LinearLayout>


        <TextView
            android:id="@+id/detailLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:text="Language"
            android:textColor="@color/green_ui"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/detailSellerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:text="Seller name: "
            android:textColor="@color/green_ui"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/detailSellerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="@dimen/_15sdp"
            android:text="Seller details: "
            android:textColor="@color/green_ui"
            android:textSize="@dimen/_18ssp" />
        <TextView
            android:id="@+id/detailPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="@dimen/_15sdp"
            android:text="Purchase date:  "
            android:textColor="@color/green_ui"
            android:textSize="@dimen/_18ssp" />

    </LinearLayout>

    <!-- Floating Action Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:elevation="@dimen/_22sdp"
            app:menu_colorNormal="@color/green_ui"
            app:menu_colorPressed="@color/green_ui"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/ic_list"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <!-- Edit Button -->
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:fab_colorNormal="@color/green_ui"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <!-- Delete Button -->
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</FrameLayout>